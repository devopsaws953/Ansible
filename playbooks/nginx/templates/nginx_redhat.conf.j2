user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    sendfile on;
    server {
        listen 80 default_server;
        server_name _;

        location / {
            return 200 'Welcome to Nginx (RedHat-based)! Managed by Ansible.';
        }
    }
}